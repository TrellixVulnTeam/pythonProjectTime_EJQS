<FrameToKivy>:


<Main>:
    frameToKivy: frameToKivy
    textLookTime: textLookTime
    statusRisk: statusRisk
    textProtect:textProtect
    btnStart: btnStart
    #:set violet (106/255, 0/255, 255/255, 1)

    canvas.before:

#        Color:
#            rgb: 1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
            source:'res/bg_1.png'

    canvas:
        Color:
            rgba: violet
        Line:
            width: 1
            cap: 'none'
            points: self.pos[0], 205, 640 * .7, 205




    FrameToKivy:
        id: frameToKivy
        size: 640 * .7, 480 * .7
        center_x: root.width * .5
        center_y: root.height * .55



    Label:
        id: textLookTime
        center_x: root.width * .5
        center_y: root.height - 80
        font_size: 35
        color: violet



    Label:
        id: statusRisk
        center_x: root.width * .5
        center_y: 100
        font_size: 25
        halign: 'center'
        color: violet

    Label:
        id: textProtect
        center_x: root.width *.5
        center_y: 60
        font_size: 18
        halign: 'center'
        color: violet

    ToggleButton:
        id: btnStart
        background_normal: 'res/btn_1.png'
        background_down: 'res/btn_2.png'
        height: 50
        width: 200
        center_x: root.width * .5
        center_y: 150
        text: "START"
        on_press: root.detect_toggle()






