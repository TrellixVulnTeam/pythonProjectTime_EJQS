
#:set violet (106/255, 0/255, 255/255, 1)
#:set wWindow 640*.7
#:set hWindow 680
#:set fontColor (42/255, 38/255, 38/255, 1)

<FrameToKivy>:

<Main>:
    frameToKivy: frameToKivy

    id: main
    canvas.before:
        Color:
            rgb: 228/255, 228/255, 228/255

        Rectangle:
            size: self.size

    Widget
        FrameToKivy:
            id: frameToKivy
            size: 640 * .7, 480 * .7
            pos: 0, 680 - (480 * .7)

    Widget:
        id: tabFoot
        canvas:
            Rectangle:
                size: 448,30
                source: 'graphic/tab_foot.png'

<TabValue>:
    textModel: textModel
    textStatusRisk: textStatusRisk
    textLookTime: textLookTime
    textGaze: textGaze
    labelTimeProcess: labelTimeProcess

    canvas.before:
        Rectangle:
            size: 436, 161
            pos: 7, 36
            source: 'graphic/tab_value.png'

    Label:
        id: textModel
        font_size: 16
        center_x: wWindow * .5
        center_y: 160
        color: fontColor
        text: "HAAR"

    Label:
        id: textStatusRisk
        bold: True
        color: fontColor
        center_x: 84
        center_y: 84
        font_size: 20

    Label:
        id: textLookTime
        bold: True
        color: fontColor
        center_x: 237
        center_y: 84
        font_size: 20

    Label:
        id: textGaze
        bold: True
        color: fontColor
        center_x: 380
        center_y: 84
        font_size: 20

    Label:
        id: labelTimeProcess
        center_x: 405
        center_y: 15

<BtnStart>:
    btn: btn
    Widget:
        ToggleButton:
            id: btn
            background_normal: 'graphic/btn_start.png'
            background_down: 'graphic/btn_stop.png'
            height: 138
            width: 138
            center_x: wWindow * .5
            center_y: 200
#            on_press: root.detect_toggle()

<Menu>:
    modelBTN: modelBTN
    BoxLayout:
        id: menu
        size: 115,100
        pos: 20, 680-(150)
        orientation: "vertical"
        spacing: 2

        Button:
            id: modelBTN
            background_normal: 'graphic/btNormal.png'
            background_down: 'graphic/btDown.png'
            text: "Model"
            color: violet
            bold: True

        Button:
            id: ecoBTN
            background_normal: 'graphic/btNormal.png'
            background_down: 'graphic/btDown.png'
            text: "ECO Mode"
            color: violet
            bold: True

        Button:
            id: helpBTN
            background_normal: 'graphic/btNormal.png'
            background_down: 'graphic/btDown.png'
            text: "Help"
            color: violet
            bold: True

<BtnMenu>:
    btnMenuToggle: btnMenuToggle

    Widget:
        ToggleButton:
            id: btnMenuToggle
            size: 27, 20
            pos: 20, 640
            background_normal: 'graphic/btn_menu.png'
            background_down: 'graphic/btn_menu_down.png'

<SettingsScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'main'

<PanelModel>:
    btnHAAR: btnHAAR
    btnHOG: btnHOG
    btnDNN: btnDNN
    btnClosedPanelModel:btnClosedPanelModel

    Widget:
        id: bgPanelModel
        pos: 16, 55
        canvas.before:
            Rectangle:
                id: bgPanelModel_1
                size:416, 600
                pos: bgPanelModel.pos
                source: "graphic/panelBig.png"

        Button:
            id: btnClosedPanelModel
            size: 40, 40
            background_normal: "graphic/btnClosed.png"
            background_down: "graphic/btnClosed.png"
            pos: 384, 606

        BoxLayout:
            pos: 109, 325
            orientation: "vertical"
            size: 230, 179
            spacing: 12

            ToggleButton:
                id: btnHAAR
                size: 230, 50
                background_normal: "graphic/bgBtnModelNormal.png"
                background_down: "graphic/bgBtnModelDown.png"
                color: violet
                text: "HAAR"


            ToggleButton:
                id: btnHOG
                size: 230, 50
                background_normal: "graphic/bgBtnModelNormal.png"
                background_down: "graphic/bgBtnModelDown.png"
                color: violet
                text: "HOG"

            ToggleButton:
                id: btnDNN
                size: 230, 50
                background_normal: "graphic/bgBtnModelNormal.png"
                background_down: "graphic/bgBtnModelDown.png"
                color: violet
                text: "DEEP"

        Widget:
            canvas:
                Rectangle:
                    size: 448,30
                    source: 'graphic/tab_foot.png'

<CircularProgressBar>:
    size_hint: (None, None)
    height: 120
    width: 120
    max: 80
    center_x: wWindow * .5
    center_y: 264